<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:paddingBottom="10dp"
                android:text="Reminder"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reminder_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="Reminder Schedule"
                android:textColor="@color/colorBlack" />

            <!--        <TextView-->
            <!--            android:id="@+id/reminder_sound"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:fontFamily="serif"-->
            <!--            android:paddingLeft="10dp"-->
            <!--            android:paddingTop="15dp"-->
            <!--            android:text="Reminder Sound"-->
            <!--            android:textColor="@color/colorBlack" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:paddingBottom="10dp"
                android:text="General"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/intake_goal_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Intake Goal"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/intake_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:paddingRight="15dp"
                    android:text="1470 ml"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:paddingBottom="10dp"
                android:text="Personal Information"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/age_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Age"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/text_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:paddingRight="15dp"
                    android:text="23"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weight_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Weight"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:paddingRight="15dp"
                    android:text="55 kg"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wakeup_time_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Wake Up Time"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/wakeup_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:paddingRight="15dp"
                    android:text="08:00 AM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bed_time_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Bed Time"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/bed_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:paddingRight="15dp"
                    android:text="11:00 PM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:paddingBottom="10dp"
                android:text="Other"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/not_working"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="Why does JalTrack water reminder not work ?"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/reset_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="Reset Data"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="Privacy Policy"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/confirm_reset_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_reset_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/background_round_corners"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="20dp"
                android:text="Resetting data will delete all your water logs. Are you sure you want to reset the data?"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_reset_data"
                android:layout_marginTop="-10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_cancel"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_round_corners"
                    android:backgroundTint="@color/colorWhite"
                    android:fontFamily="serif"
                    android:paddingLeft="25dp"
                    android:text="Cancel"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorRed"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_delete"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_round_corners"
                    android:backgroundTint="@color/colorWhite"
                    android:fontFamily="serif"
                    android:paddingRight="25dp"
                    android:text="Yes, Delete everything"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorGreen"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_edit_intake_goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:background="@drawable/background_round_corners"
                android:backgroundTint="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="serif"
                    android:text="Adjust Intake Goal"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_new_intake_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="serif"
                    android:text="1650 ml"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/seekBar_intake_goal"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:max="4500"
                    android:min="800"
                    android:progress="1650" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp">

                    <Button
                        android:id="@+id/btn_cancel_intake_goal"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_corners"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="serif"
                        android:text="Cancel"
                        android:textColor="@color/colorRed"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btn_reset_intake_goal"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_corners"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="serif"
                        android:text="Reset"
                        android:textColor="@color/colorBlue"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btn_ok_intake_goal"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_corners"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="serif"
                        android:text="Ok"
                        android:textColor="@color/colorGreen"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_edit_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:background="@drawable/background_round_corners"
                android:backgroundTint="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="serif"
                    android:text="Adjust Age"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <NumberPicker
                    android:id="@+id/numberPicker_age"
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:max="4500"
                    android:min="10"
                    android:progress="100"
                    android:spinnerMode="dialog" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="40dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_cancel_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_corners"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="serif"
                        android:text="Cancel"
                        android:textColor="@color/colorRed"
                        android:textSize="10sp"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/btn_ok_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_corners"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="serif"
                        android:text="Ok"
                        android:textColor="@color/colorGreen"
                        android:textSize="10sp"
                        style="?android:attr/borderlessButtonStyle" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_edit_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:background="@drawable/background_round_corners"
                android:backgroundTint="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="serif"
                    android:text="Adjust Weight"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <NumberPicker
                    android:id="@+id/numberPicker_weight"
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:spinnerMode="dialog" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="40dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_cancel_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_corners"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="serif"
                        android:text="Cancel"
                        android:textColor="@color/colorRed"
                        android:textSize="10sp"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/btn_ok_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_corners"
                        android:backgroundTint="@color/colorWhite"
                        android:fontFamily="serif"
                        android:text="Ok"
                        android:textColor="@color/colorGreen"
                        android:textSize="10sp"
                        style="?android:attr/borderlessButtonStyle" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>